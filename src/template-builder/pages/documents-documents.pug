extends template

block pageVars
	- var pageTitle = "Documents"
	- var pageSubTitle = "Documents"
	- var description = "This tells you what the page does"
	- var activeMenu = "documents-list"

block breadcrumbs
	+breadcrumbs([{url:"index.html",name:"Home"}, {name:"Documents List"}])

//- Include page content in page block
append content
	include ../contents/documents-documents.html

	//- Page specific dependency
	//------------------------------

	//- Add vendor specific CSS
	append vendorcss
		link(rel='stylesheet', type='text/css', href=app_assets_path + '/vendors/css/tables/datatable/datatables.min.css')

	//- Add vendor specific JS
	append vendorjs
		script(src=app_assets_path + '/vendors/js/tables/datatable/datatables.min.js', type='text/javascript')

	//- Add custom page specific JS
	append pagejs
		script(src=app_assets_path + '/js/scripts/tables/datatables/datatable-basic.js', type='text/javascript')
